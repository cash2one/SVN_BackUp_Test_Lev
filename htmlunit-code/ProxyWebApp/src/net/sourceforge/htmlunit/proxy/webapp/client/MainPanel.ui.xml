<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui'>

  <g:DockLayoutPanel unit='PCT' width='100%' height='100%'>
    <g:north size='10'>
      <g:HorizontalPanel width='100%' height='100%'>
        <g:cell horizontalAlignment='ALIGN_CENTER' verticalAlignment='ALIGN_MIDDLE'>
          <g:HorizontalPanel spacing='10'>
            <g:CheckBox text='Show Time' ui:field='timeCheckBox_' checked='true'/>
            <g:Button ui:field='clearButton_' text="Clear Log"/>
          </g:HorizontalPanel>
        </g:cell>
      </g:HorizontalPanel>
    </g:north>
    <g:south size='10'>
      <g:HTMLPanel/>
    </g:south>
    <g:center>
      <g:HTMLPanel>
        <g:TextArea ui:field='logTextArea_' width='99%' height='99%'/>
      </g:HTMLPanel>
    </g:center>
    <g:east size='10'>
      <g:HTMLPanel/>
    </g:east>
    <g:west size='10'>
      <g:HTMLPanel/>
    </g:west>
  </g:DockLayoutPanel>

</ui:UiBinder>

