@model IEnumerable<TechTrialDAL.Model.Project>

@{
    ViewBag.Title = "Project list";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Please select one of the projects assigned to you</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProjectName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.ProjectName, "Index", "Tasks", new { ProjectId = item.ProjectID }, null) 
        </td>
    </tr>
}

</table>
